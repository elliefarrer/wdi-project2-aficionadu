<h1 class="title is-1">Moderate Comments</h1>




<div class="columns is-multiline">
  <% restaurants.forEach(restaurant => { %>
    <% if (restaurant.comments) { %>
      <% restaurant.comments.forEach(comment => { %>
        <% if (!comment.moderated) { %>
          <div class="column is-10">
            <p class="has-text-weight-bold is-size-4"><%= comment.headline %>, <%= comment.rating %>‚≠êÔ∏è</p>
            <p>
              <span class="commenter"><%= comment.name %> says:
              </span>
              <%= comment.content %>
              <%= comment.moderated %>
              <%= comment.rating %>‚≠êÔ∏è
            </p>
            <img class="image is-96x96" src=<%= comment.imgUrl %> alt=<%= comment.name %> />
          </div>

          <div class="column is-1">
          <form action="/restaurants/<%= restaurant.id %>/comments/<%= comment.id %>" method="POST">
            <div class="field">
              <button class="tag is-medium azure" name="comment.moderated" value="true">üëç</button>
              <input type="hidden" name="_method" value="PATCH">
            </div>
          </form>
          </div>

          <div class="column is-1">
          <form action="/restaurants/<%= restaurant.id %>/comments/<%= comment.id %>" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <button class="tag is-delete is-medium peach"></button>
          </form>
          </div>
        <% } %>
      <% }) %>
    <% } %>
  <% }) %>
</div>
