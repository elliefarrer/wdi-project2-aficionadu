<% if (locals.currentUser) { %>
  <%- include('new', { restaurant }) %>
<% } %>


<% restaurant.comments.forEach(comment => { %>
  <% if (comment.moderated) { %>
    <div class="columns">
      <div class="section">
        <div class="column is-11">
          <p>
            <span class="commenter"><%= comment.name %> says:
            </span>
            <%= comment.headline %>
            <%= comment.content %>
            <%= comment.rating %>‚≠êÔ∏è
            Posted on <%= comment.date %>
          </p>

          <form action="/restaurants/<%= restaurant.id %>/comments" method="POST">
            <div class="field">
              <div class="control">
                <input class="button" type="submit" name="comments.vote" value="1" placeholder="üíñ">
              </div>
            </div>
            <div class="field">
              <input type="hidden" name="_method" value="PUT">
            </div>
          </form>

          <p><%= comment.vote %>

        </div>
        <div class="column is-1">
          <% if(locals.currentUser && currentUser.username === comment.name) { %>
            <form action="/restaurants/<%= restaurant.id %>/comments/<%= comment.id %>" method="POST">
              <input type="hidden" name="_method" value="DELETE">
              <button class="tag is-delete"></button>
            </form>
          <% } %>
        </div>
      </div>
    </div>
  <% } %>
<% }) %>
