
  <div class="columns">
    <div class="column is-one-third">
      <div class="box">
        <img src=<%= user.profilePic %> alt=<%= user.username %> />
      </div>
      <div class="box">
        <% if (user.type === 'reviewer') { %>
          <p>üìç <%= user.city %></p>
          <p><%= user.gender %>, born <%= user.dateOfBirth %></p>
          <% user.personality.forEach(feature => { %>
            <p class="tag"><%= feature %></p>
          <% }) %>
        <% } %>
      </div>
      <div class="section">
        <div class="level">
          <a class="button is-primary" href="/users/<%= locals.currentUser.id %>/edit">Edit</a>
        </div>
      </div>
    </div>

    <div class="column is-two-thirds">
      <h1 class="title is-1"><%= user.username %>, <%= user.fullName %></h1>
      <div class="box">
        <h2 class="subtitle is-1">Badges</h2>
      </div>
      <div class="box">
        <h2 class="subtitle is-1">Activity</h2>
      </div>
    </div>

  </div>
