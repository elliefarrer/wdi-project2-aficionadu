<h1 class="subtitle is-1">Edit Profile</h1>

<form action="/users/<%= locals.currentUser.id %>" method="POST">
  <div class="field">
    <label class="label is-size-5" for="profilePic">Profile Photo</label>
    <div class="control">
      <input class="input" type="text" name="profilePic" value="<%= user.profilePic %>">
    </div>
  </div>

  <div class="field">
    <label class="label is-size-5" for="fullName">Full Name</label>
    <div class="control">
      <input class="input" type="text" name="fullName" value="<%= user.fullName %>">
    </div>
  </div>

  <div class="field">
    <label class="label is-size-5" for="username">Username</label>
    <div class="control">
      <input class="input" type="text" name="username" value="<%= user.username %>">
    </div>
  </div>

  <div class="field">
    <label class="label is-size-5" for="email">Email</label>
    <div class="control">
      <input class="input" type="email" name="email" value="<%= user.email %>">
    </div>
  </div>

  <% if (user.type === 'reviewer') { %>
    <hr />
    <div class="field">
      <label class="label is-size-5" for="city">Town/City</label>
      <div class="control">
        <input class="input" type="text" name="city" value="<%= user.city %>">
      </div>
    </div>
    <div class="field">
      <label class="label is-size-5" for="dateOfBirth">Date of Birth</label>
      <div class="control">
        <input class="input" type="date" name="dateOfBirth" value="<%= user.dateOfBirth %>">
      </div>
    </div>
    <div class="field">
      <label class="label is-size-5" for="gender">Gender</label>
      <div class="control">
        <input type="radio" name="gender" value="Male">Male<br>
        <input type="radio" name="gender" value="Female">Female<br>
        <input type="radio" name="gender" value="Other">Other
      </div>
    </div>
    <div class="field">
      <label class="label is-size-5" for="personality">Pick three statements that describe you best</label>
      <div class="control">
        <input type="checkbox" name="personality" value="Adventurous eater">Adventurous eater<br>
        <input type="checkbox" name="personality" value="Party animal">Party animal<br>
        <input type="checkbox" name="personality" value="Family trip planner">Family trip planner<br>
        <input type="checkbox" name="personality" value="Vegetarian/vegan">Vegetarian/vegan<br>
        <input type="checkbox" name="personality" value="Peace and quiet seeker">Peace and quiet seeker<br>
        <input type="checkbox" name="personality" value="Fine dining fan">Fine dining fan<br>
        <input type="checkbox" name="personality" value="Health conscious">Health conscious<br>
        <input type="checkbox" name="personality" value="Comfort food fan">Comfort food fan<br>
        <input type="checkbox" name="personality" value="Spicy food lover">Spicy food lover<br>
        <input type="checkbox" name="personality" value="Trendsetter">Trendsetter<br>
        <input type="checkbox" name="personality" value="Will eat anything and everything">Will eat anything and everything
      </div>
    </div>
  <% } %>

  <input type="hidden" name="_method" value="PUT">

  <button class="button peach">Edit Profile</button>
</form>
